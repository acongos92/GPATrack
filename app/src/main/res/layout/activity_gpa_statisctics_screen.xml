<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gui.DisplayGPAStatistics">
    <android.support.design.widget.AppBarLayout
        android:layout_height="30dp"
        android:layout_width="fill_parent">

        <TextView
        android:id="@+id/cumulative_gpa_display"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFF"
        android:text="@string/cumulative_gpa"
        android:textStyle="bold"
        android:textSize="20sp" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/sv_all_stats"
        android:layout_width="match_parent"
        android:layout_height="473dp"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:id="@+id/ll_display_stats_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_best_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Best Semester: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/tv_total_credit_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="Total Credit Hours: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
